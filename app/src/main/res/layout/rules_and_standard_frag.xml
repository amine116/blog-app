<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="5sp">

    <TextView
        android:id="@+id/txtRulesAndStandardsHead"
        android:layout_width="match_parent"
        android:text="@string/rules"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/gap1"
        android:layout_width="match_parent"
        android:layout_height="12sp"
        android:layout_below="@id/txtRulesAndStandardsHead"/>

    <RelativeLayout
        android:id="@+id/layout_rulesAndStandards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5sp"
        android:layout_below="@id/gap1"
        tools:ignore="RtlSymmetry">

        <RelativeLayout
            android:id="@+id/layout_rule1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtRule1Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_1_topics_of_writings"
                android:textColor="@color/head_line_color"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/txtRule1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:paddingStart="10sp"
                android:textSize="15sp"
                android:layout_below="@id/txtRule1Title"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_rule2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_rule1">

            <TextView
                android:id="@+id/txtRule2Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_2_criticism"
                android:textColor="@color/head_line_color"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/txtRule2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:paddingStart="10sp"
                android:textSize="15sp"
                android:layout_below="@id/txtRule2Title"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_rule3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_rule2">

            <TextView
                android:id="@+id/txtRule3Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_3_criticism"
                android:textColor="@color/head_line_color"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/txtRule3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:paddingStart="10sp"
                android:textSize="15sp"
                android:layout_below="@id/txtRule3Title"/>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TagWiseArticleActivity"
    android:background="@color/background_color"
    android:orientation="horizontal">


    <ScrollView
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:paddingTop="20sp"
        android:paddingBottom="20sp">


        <LinearLayout
            android:id="@+id/layout_tag_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progress_readingTags"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:visibility="gone"/>



        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="0.5sp"
        android:layout_height="match_parent"
        android:background="@color/text_color"/>

    <ScrollView
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="70"
        android:paddingTop="20sp"
        android:paddingBottom="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progress_readingArticles"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtTagName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:visibility="gone"
                android:gravity="center"/>

            <LinearLayout
                android:id="@+id/layout_articles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
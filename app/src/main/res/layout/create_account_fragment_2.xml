<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/background_color"
    android:padding="20sp">

    <ProgressBar
        android:id="@+id/progress_crAcc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

    <ScrollView
        android:id="@+id/scroll_crAcc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2sp"
            android:background="@color/partition_color">

            <RelativeLayout
                android:id="@+id/layout_pagePreview_createAcc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="15sp"
                tools:ignore="RtlSymmetry"
                android:background="@color/partition_color">

                <ImageView
                    android:id="@+id/imgBack2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="@string/app_name"/>

                <TextView
                    android:id="@+id/txt_pagePreview_createAcc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/text_color"
                    android:text="@string/create_account"
                    android:layout_centerInParent="true"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txt_previewClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/x"
                    android:textColor="@color/red"
                    android:textSize="25sp"
                    android:layout_alignParentEnd="true"
                    tools:ignore="RelativeOverlap" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtHobbies"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:text="@string/hobbies"
                android:layout_below="@id/layout_pagePreview_createAcc"
                android:textColor="@color/orange"
                android:background="@color/background_color"/>
            <RelativeLayout
                android:id="@+id/layout_hobbies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20sp"
                android:layout_below="@id/txtHobbies"
                android:background="@color/background_color"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/txtHobby1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_1"
                    android:textColor="@color/text_color"
                    android:gravity="center"/>
                <RelativeLayout
                    android:id="@+id/layout_edtHobby1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orange"
                    android:layout_toEndOf="@id/txtHobby1"
                    android:padding="1sp">

                    <EditText
                        android:id="@+id/edtHobby1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:gravity="center"
                        android:background="@color/background_color"
                        android:textColorHint="@color/text_color"
                        android:autofillHints="" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtHobby2"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:text="@string/_2"
                    android:textColor="@color/text_color"
                    android:gravity="center"
                    android:layout_below="@id/txtHobby1"/>
                <RelativeLayout
                    android:id="@+id/layout_hobby2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orange"
                    android:padding="1sp"
                    android:layout_toEndOf="@id/txtHobby2"
                    android:layout_below="@id/layout_edtHobby1">

                    <EditText
                        android:id="@+id/edtHobby2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:gravity="center"
                        android:background="@color/background_color"
                        android:textColorHint="@color/text_color"
                        android:autofillHints="" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtHobby3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_3"
                    android:textColor="@color/text_color"
                    android:gravity="center"
                    android:layout_below="@id/txtHobby2"/>
                <RelativeLayout
                    android:id="@+id/layout_hobby3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orange"
                    android:layout_toEndOf="@id/txtHobby3"
                    android:layout_below="@id/layout_hobby2"
                    android:padding="1sp">

                    <EditText
                        android:id="@+id/edtHobby3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:gravity="center"
                        android:background="@color/background_color"
                        android:textColorHint="@color/text_color"
                        android:autofillHints="" />

                </RelativeLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/txtExpertise"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:text="@string/expertise"
                android:layout_below="@id/layout_hobbies"
                android:background="@color/background_color"
                android:textColor="@color/orange"/>
            <RelativeLayout
                android:id="@+id/layout_expertise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20sp"
                android:layout_below="@id/txtExpertise"
                android:background="@color/background_color"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/txtExpert1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_1"
                    android:textColor="@color/text_color"
                    android:gravity="center"/>
                <RelativeLayout
                    android:id="@+id/layout_edtExpert1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orange"
                    android:layout_toEndOf="@id/txtExpert1"
                    android:padding="1sp">

                    <EditText
                        android:id="@+id/edtExpert1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:gravity="center"
                        android:background="@color/background_color"
                        android:textColorHint="@color/text_color"
                        android:autofillHints="" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtExpert2"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:text="@string/_2"
                    android:textColor="@color/text_color"
                    android:gravity="center"
                    android:layout_below="@id/txtExpert1"/>
                <RelativeLayout
                    android:id="@+id/layout_edtExpert2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orange"
                    android:padding="1sp"
                    android:layout_toEndOf="@id/txtExpert2"
                    android:layout_below="@id/layout_edtExpert1">

                    <EditText
                        android:id="@+id/edtExpert2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:gravity="center"
                        android:background="@color/background_color"
                        android:textColorHint="@color/text_color"
                        android:autofillHints="" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtExpert3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_3"
                    android:textColor="@color/text_color"
                    android:gravity="center"
                    android:layout_below="@id/txtExpert2"/>
                <RelativeLayout
                    android:id="@+id/layout_Expert3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orange"
                    android:layout_toEndOf="@id/txtExpert3"
                    android:layout_below="@id/layout_edtExpert2"
                    android:padding="1sp">

                    <EditText
                        android:id="@+id/edtExpert3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:gravity="center"
                        android:background="@color/background_color"
                        android:textColorHint="@color/text_color"
                        android:autofillHints="" />

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_buttonCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_expertise"
                android:background="@color/background_color"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCrAcc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>